<Window x:Class="_02.屏幕保护程序.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02.屏幕保护程序"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="453*"/>
            <RowDefinition Height="116*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="Can" Background="Black" Width="570" Height="443" Margin="11,0" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="开始" HorizontalAlignment="Left" Margin="30,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="142" Height="65" FontSize="30" Click="btnStart_Click"/>
        <Button x:Name="btnClear" Content="清除" HorizontalAlignment="Left" Margin="413,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="141" Height="65" FontSize="30" Click="btnClear_Click"/>
        <Button x:Name="btnStop" Content="停止" HorizontalAlignment="Left" Margin="218,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="142" Height="65" FontSize="30" Click="btnStop_Click"/>

    </Grid>
</Window>
